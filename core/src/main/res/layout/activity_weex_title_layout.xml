<?xml version="1.0" encoding="utf-8"?>
<com.weexbox.core.widget.SimpleToolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/statusbar_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        tools:visibility="visible" />


    <RelativeLayout
        android:id="@+id/actionbar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:visibility="visible"
        tools:visibility="visible">

        <LinearLayout
            android:id="@+id/action_bar_center_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="8dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxEms="10"
                android:singleLine="true"
                android:textColor="#3F3453"
                android:textSize="18sp" />

        </LinearLayout>

        <com.weexbox.core.widget.DrawableTextView
            android:id="@+id/btnBack"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/arrows_left2"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <com.weexbox.core.widget.DrawableTextView
            android:paddingLeft="5dp"
            android:paddingRight="15dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:id="@+id/btnBack2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btnBack"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="gone"
            tools:drawableLeft="@drawable/arrows_left2"
            tools:visibility="visible" />

        <com.weexbox.core.widget.DrawableTextView
            android:id="@+id/btnNext2"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@id/btnNext"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="gone"
            tools:background="#dee55e"
            tools:text="关注"
            tools:visibility="visible" />

        <com.weexbox.core.widget.DrawableTextView
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="gone"
            tools:text="wocao"
            tools:visibility="visible" />
    </RelativeLayout>

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/actionbar_bottom_line"
        android:visibility="visible"
        tools:visibility="visible" />

</com.weexbox.core.widget.SimpleToolbar>